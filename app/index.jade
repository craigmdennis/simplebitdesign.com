extends templates/base.jade

block header
  .hero.container
    .inner
      include templates/_mainmenu

      h1.hero-title We make intuitive interfaces<br> for complex apps and services.
      blockquote.hero-quote
        q Simplicity is the ultimate sophistication.
        cite &mdash; &nbsp;
          a.inherit(href="http://en.wikipedia.org/wiki/Simplicity#Quotes_about_simplicity", target="_blank") Da Vinci

block content

  section
    .section.bg-primary
      .container
        header
          .section-header
            h2.section-title Our expertise

        .subsection
          figure
            .figure
              #img-1.rwd-media-container(data-ratio="280-224")
                img.rwd-media-object.rounded.bg-gray(src="http://placehold.it/560x448/F8F8F8")

            figcaption
              h3.subsection-title Information Design:
              .subsection-body
                p Presenting information in a way that fosters efficient and effective understanding.

        .subsection
          figure
            .figure.has-hidden
              img#scribble-1.scribble.reveal(src="images/scribble-1.svg")
              img#scribble-2.scribble.reveal(src="images/scribble-2.svg")
              #img-2.rwd-media-container.rounded.bg-gray(data-ratio="280-224")
                img.rwd-media-object.bordered-light(src="images/ux.svg")
            figcaption
              h3.subsection-title User Experience Design:
              .subsection-body
                p Enhancing customer satisfaction and loyalty by improving the usability, ease of use, and pleasure provided in the interaction.

        .subsection
          figure
            .figure
            #img-3.rwd-media-container(data-ratio="280-224")
              img.rwd-media-object.rounded.bg-gray(src="http://placehold.it/560x448/F8F8F8")
            figcaption
              h3.subsection-title User Interface Design:
              .subsection-body
                p Make the user's interaction as simple and efficient as possible; finishing the task at hand without drawing unnecessary attention.

    section
      .section.bg-gray
        .container
          header
            .section-header
              h2.section-title Our experience
              p.section-subtitle We have experience working with start-ups and well-known brands; <br>creating beautiful concepts as well as complete UI redesigns.

          mixin clients(['bbc', 'asos', 'smashing', 'confused'])

    section
      .section.bg-secondary
        .container
          header
            .section-header
              h1.section-title Let's work together
              p.section-subtitle <strong>Design is a partnership.</strong> We work <em>with</em> you to achieve your goals and create solutions to suit both your users and your business.
          include templates/_contactForm
