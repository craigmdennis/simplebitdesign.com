- imageAlt = "Screenshot of #{project.client}"
- imagePath = path.to_s.gsub '.html', '/main'

.l-bordered.l-subtle
  .c-post.c-post--adjacent
    .l-leading.l-center
      %h1.c-post__title
        - if current_page.path != path
          = link_to project.title, path, class: "h-inherit"
        - else
          = project.title

      - if current_page.path != path
        - homeImagePath = path.to_s.gsub '.html', '/home'

        -# - if sitemap.find_resource_by_path("#{gulp_image_path(homeImagePath)}.png")
        -#   - imagePath = homeImagePath

        .c-post__button.h-align-center
          = link_to "Learn more about #{project.client}", path, class: "c-button c-button--tertiary"

    .c-post__mainimage
      - if current_page.path != path
        = link_to path do
          = image_tag "#{gulp_image_path(imagePath + '.png')}", srcset: "#{gulp_image_path(imagePath + '@2x.png')} 2x", alt: imageAlt, class: "will-animate fadeInUp o-highlight-image", "data-wow-offset" => 200
      - else
        .l-center
          = image_tag "#{gulp_image_path(imagePath + '.png')}", srcset: "#{gulp_image_path(imagePath + '@2x.png')} 2x", alt: imageAlt, class: "will-animate fadeInUp o-highlight-image", "data-wow-offset" => 200
