- imageAlt = "Screenshot of #{project.client}"
- imagePath = path.to_s.gsub '.html', '/main'

.l-subtle.l-bordered
  .c-post.c-post--adjacent
    .l-leading.l-center
      %h1.c-post__title
        - if current_page.path != path
          = link_to project.title, path, class: "h-inherit"
        - else
          = project.title

      - if current_page.path != path
        - homeImagePath = path.to_s.gsub '.html', '/home'

        -# - if sitemap.find_resource_by_path("#{gulp_image_path(homeImagePath)}.png")
        -#   - imagePath = homeImagePath

        .c-post__button.h-align-center
          = link_to "View project", path, class: "c-button c-button--tertiary"

    - if current_page.path != path
      = link_to path, class: "c-post__mainimage" do
        = image_tag "#{gulp_image_path(imagePath + '.png')}", srcset: "#{gulp_image_path(imagePath + '@2x.png')} 2x", alt: imageAlt, class: "l-center will-animate fadeInUp"
    - else
      .c-post__mainimage
        = image_tag "#{gulp_image_path(imagePath + '.png')}", srcset: "#{gulp_image_path(imagePath + '@2x.png')} 2x", alt: imageAlt, class: "l-center will-animate fadeInUp"
